<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jacinto.jacintoquiz1.SecondActivity">



<TextView
android:id="@+id/textView"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Bachelor of Science in Computer Science(4 years)"
android:layout_marginTop="36dp"
android:textSize="15dp"
android:layout_alignParentTop="true"
android:layout_alignParentStart="true" />

<TextView
android:id="@+id/textView2"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="34dp"
android:text="Bachelor of Science in Computer Science(4 years)"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
android:textColor="@color/colorPrimary"
android:textColorLink="@android:color/transparent"
android:textSize="25dp"
android:layout_below="@+id/textView"
android:layout_centerHorizontal="true" />

<TextView
android:id="@+id/textView3"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Level I accredited by the Philippine Accrediting Association of Schools, Colleges, and Universities

Students under the BS Computer Science program are highly trained for software and system development. The programâ€™s main focus is to expose the students to different approaches and styles in developing programs whether they are procedural or the object oriented type of system approach."
android:textSize="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
android:layout_marginTop="43dp"
android:layout_below="@+id/textView2"
android:layout_alignEnd="@+id/textView2"
android:layout_alignStart="@+id/textView2" />

<Button
android:id="@+id/btnHome"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Home"
android:onClick="callMainActivity"
    android:layout_marginBottom="18dp"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/textView3"
    android:layout_marginStart="12dp" />

    <Button
        android:onClick="callThirdActivity"
        android:id="@+id/btnIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IT Program"
        android:layout_alignBaseline="@+id/btnHome"
        android:layout_alignBottom="@+id/btnHome"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="callFourthActivity"
        android:id="@+id/btnIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IS Program"
        android:layout_alignBaseline="@+id/btnIT"
        android:layout_alignBottom="@+id/btnIT"
        android:layout_alignEnd="@+id/textView3" />
</RelativeLayout>

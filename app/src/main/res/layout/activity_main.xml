<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jacinto.jacintoquiz1.MainActivity">

    <Button
    android:id="@+id/btnCS"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="B.S. COMPUTER SCIENCE"
        android:layout_marginTop="91dp"
        android:onClick="callSecondActivity"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnIT"
        android:layout_alignEnd="@+id/btnIT" />
    <Button
        android:id="@+id/btnIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B.S. INFORMATION TECHNOLOGY"
        android:layout_marginTop="47dp"
        android:onClick="callThirdActivity"
        android:layout_below="@+id/btnIS"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/btnIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B.S. INFORMATION SYSTEMS"
        android:layout_marginTop="49dp"
        android:onClick="callFourthActivity"
        android:layout_below="@+id/btnCS"
        android:layout_alignEnd="@+id/btnIT"
        android:layout_alignStart="@+id/btnIT" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCS"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</RelativeLayout>
